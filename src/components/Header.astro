<nav>
  <!-- Mobile Nav Bar with menu toggle  -->
  <div
    class="bg-neutral fixed bottom-0 w-full md:hidden flex justify-end z-30 h-11"
  >
    <button
      aria-label="open"
      onclick=""
      id="open-nav-btn"
      class="mr-1 text-light hover:text-primary"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-11 h-11"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5M12 17.25h8.25"></path>
      </svg>
    </button>
    <button
      aria-label="close"
      id="close-nav-btn"
      onclick="showNav(true)"
      class="hidden"
    >
      <svg
        class=""
        width="30"
        height="30"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M18 6L6 18"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M6 6L18 18"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </button>
  </div>

  <!-- Side Navigation, toggle in smaller screens and active in bigger screens  -->
  <div
    id="main-nav"
    class="justify-start absolute left-0 transform lg:translate-x-0 ease-in-out transition duration-150 flex flex-col items-start h-full w-full sm:w-[250px] sm:max-w-[250px] bg-nav hidden"
  >
    <!-- Site Logo and Name  -->
    <div
      class="flex flex-col flex-wrap w-full justify-center items-center py-11"
    >
      <div><img src="" alt="SiteImage" /></div>
      <p>Panda</p>
    </div>
    <!-- Navigation Links  -->
    <div
      class="flex flex-col justify-center items-start w-full gap-y-2.5 mx-auto py-11"
    >
      <!-- Projects  -->
      <a
        href="#"
