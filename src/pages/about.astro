---
import Layout from "../layouts/Layout.astro";
import PageBanner from "../components/PageBanner.astro";
import AboutAccordion from "../components/AboutAccordion";
---

<Layout title="About - Panda">
  <!-- About me -->
  <section class="max-w-7xl mx-auto px-11 pb-11">
    <PageBanner text="About Me!" />
    <h1
      class="mt-11 text-3xl font-bold md:text-5xl lg:text-6xl py-3 text-center"
    >
      About
    </h1>
    <h2
      class="text-center text-2xl md:text-3xl lg:text-4xl pb-4 text-neutral dark:text-text"
    >
      Hi! I'm Danial
    </h2>
    <p class="pb-3 md:text-xl mb-3">
      I'm a front-end web developer focused on creating responsive websites
      using javascript frameworks such as <strong>React</strong>, <strong>
        Astro</strong
      >, and
      <strong>Svelte</strong>. I enjoy the process of problem solving when
      coding with a language I am not familiar with, or working on a function I
      haven't used before.
    </p>
  </section>
  <section
    class="max-w-7xl mx-auto px-11 pb-11 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 md:justify-items-center gap-y-8"
  >
    <div>
      <h3
        class="text-2xl md:text-3xl lg:text-4xl pb-4 text-neutral dark:text-text"
      >
        Development
      </h3>
      <ul>
        <li>JavaScript</li>
        <li>JQuery</li>
        <li>TypeScript</li>
        <li>React.js</li>
        <li>Next.js</li>
        <li>Astro.js</li>
        <li>PHP</li>
        <li>Wordpress</li>
        <li>WooCommerce</li>
        <li>Shopify</li>
      </ul>
    </div>
    <div>
      <h3
        class="text-2xl md:text-3xl lg:text-4xl pb-4 text-neutral dark:text-text"
      >
        Design
      </h3>
      <ul>
        <li>Sass</li>
        <li>TailwindCSS</li>
        <li>Adobe Illustrator</li>
        <li>Adobe Photoshop</li>
        <li>Adobe InVision</li>
        <li>Adobe XD</li>
        <li>Figma</li>
      </ul>
    </div>
    <div>
      <h3
        class="text-2xl md:text-3xl lg:text-4xl pb-4 text-neutral dark:text-text"
      >
        Others
      </h3>
      <ul>
        <li>Github</li>
        <li>Vercel</li>
        <li>Kroll</li>
        <li>VSCode</li>
      </ul>
    </div>
  </section>
  <AboutAccordion client:load />
</Layout>
